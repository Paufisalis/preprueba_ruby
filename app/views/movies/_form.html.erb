<%= form_with(model: movie, local: true) do |f| %>
<div class="row">
<div class="col-6">
<div class="form-group" >
<%= f.label :name %>
<%= f.text_field :name, class:"form-control" %>
</div>
<br>
<div class="form-group">
<%= f.label :year %>
<%= f.number_field :year, class:"form-control" %>
</div>
<br>
<div class="actions">
<%= f.submit class:"btn btn-outline-warning" %>
</div>
<% end %>
</div>
</div>
<br>
<%= link_to "Volver", movies_path, class:"btn btn-outline-secondary"%>
